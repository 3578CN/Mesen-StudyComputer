# Doxyfile for Mesen-StudyComputer
# 说明：用于生成项目的 API 文档（Doxygen）。
# 说明性配置已尽量保持最小并可根据需要调整。

PROJECT_NAME           = "Mesen-StudyComputer"
PROJECT_BRIEF          = "自动生成的 Mesen 项目 API 文档（中文）"
OUTPUT_DIRECTORY       = docs/doxygen
CREATE_SUBDIRS         = YES
OUTPUT_LANGUAGE        = Chinese

# 输入源（默认假设仓库内的 Mesen2 源码）
# 同时包含 docs/doxygen 以保证自定义的 MAINPAGE_CN.md 被处理
INPUT                  = Mesen2 docs/doxygen
FILE_PATTERNS          = *.c *.cc *.cpp *.cxx *.h *.hh *.hpp *.hxx *.inl *.cs *.lua *.md
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */bin/* */obj/* */build/* */thirdparty/* */ThirdParty/*

# 提取设置
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
EXTRACT_ANON_NSPACES   = YES

# 输出格式
GENERATE_HTML          = YES
HTML_OUTPUT            = html
GENERATE_TREEVIEW      = YES

GENERATE_LATEX         = NO
GENERATE_RTF           = NO
GENERATE_MAN           = NO
GENERATE_XML           = NO

# Graphviz (类图等) - 默认关闭；如需生成图请安装 Graphviz 并把 HAVE_DOT 设置为 YES
HAVE_DOT               = NO
DOT_IMAGE_FORMAT       = png

MARKDOWN_SUPPORT       = YES
INPUT_ENCODING         = UTF-8
USE_MDFILE_AS_MAINPAGE = docs/doxygen/MAINPAGE_CN.md

# 警告与诊断
WARN_IF_UNDOCUMENTED   = YES
WARNINGS               = YES

# 其他可按需开启/调整的选项（注：这是一个基础模板，可根据需要扩展）
