{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-all",
            "dependsOn": ["build-core", "build-ui"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-core",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/Mesen2/Core/Core.vcxproj",
                "/p:Configuration=Debug"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-ui",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/Mesen2/UI/UI.vcxproj",
                "/p:Configuration=Debug"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}